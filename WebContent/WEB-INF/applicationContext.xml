<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>

	<bean id="mypoissonDAO" class="com.javaquarium.dao.PoissonDAO" singleton="true"/>

	<bean id="mypoissonService" class ="com.javaquarium.business.PoissonService" singleton="true">
        <property name="poissonDao"> <ref bean="mypoissonDAO"/></property>
	</bean>

	<bean name="/ajoutEspece" class="com.javaquarium.action.AjoutEspeceAction" singleton="true">
        <property name="poissonService"> <ref bean="mypoissonService"/></property>
    </bean>

 	<bean name="/listerEspece" class="com.javaquarium.action.ListerEspeceAction" singleton="true">
     	<property name="poissonService"> <ref bean="mypoissonService"/></property>
 	</bean>
 
 	<bean name="/login" class="com.javaquarium.action.LoginAction" singleton="true"/>
 	
 	<bean name="/ajoutPoissonDansAquarium" class="com.javaquarium.action.AjoutPoissonDansAquariumAction" singleton="true"/>

</beans>



